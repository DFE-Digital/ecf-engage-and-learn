 <% if course_modules.each do |course_module| %>
  <li class="app-task-list__item">
    <div>
      <span>
        <%= govuk_link_to course_module.title, year_module_url(course_module.course_year, course_module) %>
      </span>
      <%= render ProgressLabelComponent.new progress: course_module.progress %>
      <p class="gem-c-govspeak govuk-govspeak ">
        <%= course_module.content_to_html.html_safe %>
      </p>
    </div>
  </li>
<% end.empty? %>
  <p>No course modules were found!</p>
<% end %>
