<%= f.govuk_error_summary %>

<%= f.govuk_text_field :title, label: { text: "Lesson title" } %>

<%= f.govuk_collection_select(
      :course_module_id,
      @course_modules,
      :id,
      :term_and_title,
      label: { text: "Which module would you like the lesson to be assigned to?" },
      ) %>

<%= render LessonNewPositionComponent.new(lesson: f.object, form: f) %>

<%= f.govuk_number_field(
      :completion_time_in_minutes,
      label: { text: "Time in minutes"},
      width: 4, hint: { text: " For example, 90"},
      value: @course_lesson.completion_time_in_minutes) %>

<%= f.govuk_text_area(
      :ect_summary,
      label: { text: 'ECT summary' },
      rows: 10) %>

<%= f.govuk_text_area(
      :mentor_summary,
      label: { text: 'Mentor summary' },
      rows: 10) %>

<%= f.govuk_submit t(f.object.persisted? ? :update : :create, scope: [:helpers, :submit, :course_lesson]) %>
