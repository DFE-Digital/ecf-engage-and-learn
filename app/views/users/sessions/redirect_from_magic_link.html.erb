<% content_for :title, "Complete sign in" %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">You are now signed in</h1>
    <%= form_with url: users_sign_in_with_token_path, id: "confirm-sign-in-form" do %>
      <div class="field">
        <%= hidden_field_tag :login_token, @login_token %>
      </div>
      <%= submit_tag "Continue", class: "govuk-button" %>
    <% end %>
  </div>
</div>
